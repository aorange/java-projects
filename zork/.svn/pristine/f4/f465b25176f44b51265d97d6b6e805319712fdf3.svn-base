/**
 * Room class that stores the name, description, and adjacent rooms
 * @author Allen Tang
 */
public class Room {
    private String name;
    private String description;
    private AdjacentRoom [] directions;

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getDescription() {
        return description;
    }

    public void setDescription(String description) {
        this.description = description;
    }

    public AdjacentRoom[] getDirections() {
        return directions;
    }

    public void setDirections(AdjacentRoom[] directions) {
        this.directions = directions;
    }

}
